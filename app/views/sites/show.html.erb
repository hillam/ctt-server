<h3>User: <%= @user.email %></h3>
<h3>Site: <%= @site.hostname %></h3><h3>Total Time: <%= format_time @site.time %></h3><% if @site.notifications.count > 0 && current_user == @user %><div id='noti_table'>	<hr align='left'>	<h3>Notifications:</h3>	<table id="table" align="center">		<thead align='left'>			<tr>				<th>Time</th>				<th>Span</th>				<th></th>				<th></th>			</tr>		</thead>		<tbody id='data'>			<% @site.notifications.each do |noti| %>			<tr id="noti_<%= noti.id %>">				<td><%= format_time noti.time %></td>				<td><%= format_time noti.span %></td>				<!-- <td><a href="#">Edit</a></td> -->				<td><a href="#" onclick="delete_noti(<%= noti.id %>);">Delete</a></td>			</tr>			<% end %>		</tbody>	</table></div><% end %><% if current_user == @user %>	<hr align='left'>	<form action="/notifications" method='POST' onsubmit="submit.disabled = true; return true;">		<h3>Create Notification:</h3>		<input type="text" hidden name="hostname" value="<%= @site.hostname %>">		<p>Notify me after			<input type="number" length="3" min=1 required id='time' name="time">			hours per			<select name="span">				<option value="86400">day</option>				<option value="604800">week</option>				<option value="2628000">month</option>				<option value="31540000">year</option>			</select>.		<input type="submit" name="submit">	</form><% end %><%= render partial: 'users/go_back' %>